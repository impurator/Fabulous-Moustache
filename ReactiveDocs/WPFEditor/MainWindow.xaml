<Window x:Class="WPFEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="MainWindow" Height="768" Width="1024">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Height="100" Orientation="Horizontal" DataContext="{Binding VariablePropertiesVM}">
            <ComboBox ItemsSource="{Binding AvailableVariableTypes}" SelectedItem="{Binding SelectedVariableType, Mode=TwoWay}" Width="200" Height="30">
            </ComboBox>
            <TextBox Text="{Binding VarName, Mode=TwoWay}" Height="30" Width="100"/>
            
        </StackPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
            <Button DockPanel.Dock="Bottom" Width="60" Click="ButtonBase_OnClick">
                <TextBlock TextAlignment="Center">Insert<LineBreak/>Variable</TextBlock>
            </Button>
        </StackPanel>
        <RichTextBox Name="TextPane" FontFamily="SegoeUI" FontSize="14" IsDocumentEnabled="True"/>
    </DockPanel>
</Window>
